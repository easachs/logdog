<%= form_with model: [@workout, workout_exercise] do |form| %>
  <% if workout_exercise.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(workout_exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      <ul>
        <% workout_exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :exercise_id, "Exercise", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :exercise_id,
        options_from_collection_for_select(@exercises, :id, :name, workout_exercise.exercise_id),
        { prompt: 'Select Exercise' },
        { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" } %>
  </div>

  <div class="mb-4">
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                       rows: 3, placeholder: "Exercise-specific notes for this workout" %>
  </div>

  <div class="mb-4">
    <%= form.label :order, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :order, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                          placeholder: "Order in workout" %>
  </div>

  <div class="mb-4">
    <%= form.submit submit_text, class: "btn bg-blue-500 hover:bg-blue-600" %>
  </div>
<% end %>
