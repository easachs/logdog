<h1><%= @exercise.name %></h1>

<div class="bg-gray-100 p-4 rounded mb-4">
  <p><strong>Category:</strong> <%= @exercise.category %></p>
  <p><strong>Equipment:</strong> <%= @exercise.equipment %></p>
  <% if @exercise.description.present? %>
    <p class="mt-2"><strong>Description:</strong></p>
    <p><%= @exercise.description %></p>
  <% end %>
</div>

<div class="mb-4">
  <%= link_to "Edit", edit_exercise_path(@exercise), class: "btn bg-blue-500" %>
  <%= link_to "Delete", exercise_path(@exercise), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn bg-red-500 ml-2" %>
</div>

<%= link_to "Back to Exercise Library", exercises_path %>
