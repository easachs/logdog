<%= form_with model: workout_template do |form| %>
  <% if workout_template.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(workout_template.errors.count, "error") %> prohibited this template from being saved:</h2>
      <ul>
        <% workout_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                        placeholder: "Template Name", autofocus: true %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                       rows: 4, placeholder: "Template description and notes" %>
  </div>

  <div class="mb-4">
    <%= form.submit submit_text, class: "btn bg-blue-500" %>
  </div>
<% end %>
