<%= form_with model: exercise do |form| %>
  <% if exercise.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      <ul>
        <% exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                        placeholder: "Exercise Name", autofocus: true %>
  </div>

  <div class="mb-4">
    <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :category,
        options_for_select([
          ['Push', 'Push'],
          ['Pull', 'Pull'],
          ['Legs', 'Legs'],
          ['Core', 'Core']
        ], exercise.category),
        { prompt: 'Select Category' },
        { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" } %>
  </div>

    <div class="mb-4">
    <%= form.label :equipment, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :equipment,
        options_for_select([
          ['Barbell', 'Barbell'],
          ['Dumbbell', 'Dumbbell'],
          ['EZ Bar', 'EZ Bar'],
          ['Machine', 'Machine'],
          ['Bodyweight', 'Bodyweight'],
          ['Cable', 'Cable']
        ], exercise.equipment),
        { prompt: 'Select Equipment' },
        { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" } %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                       rows: 4, placeholder: "Exercise description and instructions" %>
  </div>

  <div class="mb-4">
    <%= form.submit submit_text, class: "btn bg-blue-500" %>
  </div>
<% end %>
