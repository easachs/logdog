<h1>Exercise Library</h1>

<div class="my-4">
  <%= link_to "New Exercise", new_exercise_path, class: "btn bg-blue-500" %>
  <%= link_to "Back to Workouts", workouts_path, class: "btn bg-blue-500 ml-2" %>
</div>

<% @exercises.each do |exercise| %>
  <div class="m-2 mb-4 bg-gray-100 p-4 rounded">
    <h3 class="text-lg font-semibold"><%= link_to exercise.name, exercise_path(exercise) %></h3>
    <p class="text-sm text-gray-600"><strong>Category:</strong> <%= exercise.category %></p>
    <p class="text-sm text-gray-600"><strong>Equipment:</strong> <%= exercise.equipment %></p>
    <% if exercise.description.present? %>
      <p class="mt-2"><%= exercise.description %></p>
    <% end %>
    <div class="mt-2">
      <%= link_to "Edit", edit_exercise_path(exercise), class: "text-blue-600" %>
      <%= link_to "Delete", exercise_path(exercise), method: :delete,
                  data: { confirm: "Are you sure?" }, class: "text-red-600 ml-4" %></p>
    </div>
  </div>
<% end %>

<%= paginate @exercises %>
