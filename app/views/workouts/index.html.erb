<h1>Workouts</h1>

<% @workouts.each do |workout| %>
  <div class="m-2 mb-4 bg-gray-100 p-2 rounded">
  <h3><%= workout.performed_at_formatted %></h3>
  <h2><%= link_to workout.name, workout_path(workout) %></h2>
  <% if workout.length.present? || workout.notes.present? %>
    <p><%= workout.notes %></p>
    <p><%= workout.length %> min</p>
  <% end %>
  <div class="my-2">
    <% workout.workout_exercises.each do |workout_exercise| %>
      <p><%= link_to workout_exercise.exercise.name, workout_workout_exercise_path(workout, workout_exercise) %></p>
    <% end %>
  </div>
  <%= link_to "Edit", edit_workout_path(workout) %>
  <%= button_to "Delete", workout_path(workout), method: :delete,
                                                    data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<%= paginate @workouts %>

<div class="mb-4">
  <%= link_to "New Workout", new_workout_path, class: "btn bg-blue-500" %>
  <%= link_to "Workout Templates", workout_templates_path, class: "btn bg-blue-500 ml-2" %>
  <%= link_to "Exercise Library", exercises_path, class: "btn bg-blue-500 ml-2" %>
</div>
