<%= form_with model: [@workout, @workout_exercise, workout_set] do |form| %>
  <% if workout_set.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(workout_set.errors.count, "error") %> prohibited this set from being saved:</h2>
      <ul>
        <% workout_set.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :set_number, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :set_number, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                          placeholder: "Set number" %>
  </div>

  <div class="mb-4">
    <%= form.label :reps, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :reps, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                          placeholder: "Number of repetitions" %>
  </div>

  <div class="mb-4">
    <%= form.label :weight, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :weight, step: 0.5, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md",
                          placeholder: "Weight in lbs" %>
  </div>

  <div class="mb-4">
    <%= form.submit submit_text, class: "btn bg-blue-500" %>
  </div>
<% end %>
